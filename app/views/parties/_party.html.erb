<tr>
  <td><%= party.title %><i class="<%= active_icon_class(party) %>"></i></td>
  <td><%= party.start_at %></td>
  <td><%= party.end_at %></td>
  <td><%= party.venue %></td>
  <td>
    <%= link_to content_tag(:i, nil, class: 'fa fa-eye'), party_path(party) %>&nbsp;
    <%= link_to content_tag(:i, nil, class: 'fa fa-pencil-square-o'), edit_party_path(party) %>&nbsp;
    <%= link_to content_tag(:i, nil, class: 'fa fa-trash-o'), party_path(party), method: :delete, data: { confirm: "Are you sure want to delete?" } %>&nbsp;
  </td>
</tr>